pragma solidity ^0.8.17;

import {IThemeRenderer} from "../IThemeRenderer.sol";

/// @author sammybauch.eth
/// @title  Speedtracer Delegate.xyz Theme
/// @notice Colors, font and names for Delegate themed Speedtracer tracks
contract DelegateThemeRenderer is IThemeRenderer {
    bytes16 private constant SYMBOLS = "0123456789ABCDEF";

    uint24 public constant BACKGROUND_COLOR = 0x04724D;
    uint24 public constant KERB_COLOR = 0xFFC300;
    uint24 public constant ROAD_COLOR = 0x04724D;
    uint24 public constant MIDLINE_COLOR = 0xFFC300;

    string public constant FONT =
        "url(data:font/ttf;utf-8;base64,);";

    function themeName() external pure returns (string memory) {
        return "Delegate.xyz";
    }

    function name(uint256) external pure returns (string memory) {
        return "Security Circle";
    }

    function themeColors() public pure returns (uint96) {
        return (uint96(BACKGROUND_COLOR) << 72) | (uint96(KERB_COLOR) << 48)
            | (uint96(ROAD_COLOR) << 24) | uint96(MIDLINE_COLOR);
    }

    function background() external pure returns (string memory) {
        return string(
            abi.encodePacked(
                "<rect id='bg' width='100%' height='100%' fill='#",
                toHexString(BACKGROUND_COLOR),
                "' />  <g clip-path='url(#clip0_3054_608)'><path d='M781.344 844.916C911.238 738.104 1035.98 635.322 1113.69 519.553C1098.46 498.504 1077.41 481.71 1053.23 471.41L631.518 292.494C622.112 288.239 612.034 286 601.508 286C591.206 286 580.904 288.239 571.722 292.494L149.79 471.41C100.52 492.235 63.7916 540.826 62 597.479C64.6875 783.784 128.067 1095.94 370.834 1301.95C442.724 1123.48 614.721 982.181 781.344 844.916Z' fill='#04724D' /> <path d='M660.634 1412.79C1046.51 1228.05 1137.88 821.628 1139 597.479C1139.23 568.593 1129.6 541.722 1113.69 519.554C1036.21 635.323 911.24 738.104 781.346 844.916C614.723 982.182 442.726 1123.48 370.836 1301.95C420.33 1343.82 476.991 1381.44 542.386 1412.79C579.786 1430.48 623.233 1430.48 660.634 1412.79Z' fill='#FFC300' /></g><defs><clipPath id='clip0_3054_608'><rect width='1077' height='1140' fill='white' transform='translate(62 286)' /></clipPath></defs>"
            )
        );
    }

    function road() external pure returns (string memory) {
        return toHexString(ROAD_COLOR);
    }

    function kerb() external pure returns (string memory) {
        return toHexString(KERB_COLOR);
    }

    function midline() external pure returns (string memory) {
        return toHexString(MIDLINE_COLOR);
    }

    function font() external pure returns (string memory) {
        return FONT;
    }

    function toHexString(uint256 value) internal pure returns (string memory) {
        bytes memory buffer = new bytes(6);
        for (uint256 i = 0; i < 6; ++i) {
            buffer[5 - i] = SYMBOLS[value & 0xF];
            value >>= 4;
        }
        return string(buffer);
    }

    function filter(uint256) external pure returns (string memory) {
        return
        '<filter id="noise"><feComponentTransfer><feFuncR type="identity" /><feFuncG type="identity" /><feFuncB type="identity" /><feFuncA type="identity" /></feComponentTransfer></filter><filter id="tf" x="-20%" y="-20%" width="140%" height="140%"><feGaussianBlur stdDeviation="2 2" result="shadow"/><feOffset dx="2" dy="2"/></filter>';
    }
}
